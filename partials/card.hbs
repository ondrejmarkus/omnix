<article class="card" role="article">
    {{#if feature_image}}
    <div class="card__img-wrapper">
        <a href="{{url}}">
            {{!-- This is a responsive image, it loads different sizes depending on device
                https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
            <div class="card__img-bg pattern-dots-sm">
                <img class="card__img" srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w,
                                {{img_url feature_image size="l"}} 1000w,
                                {{img_url feature_image size="xl"}} 2000w" sizes="(max-width: 1000px) 400px, 700px"
                    src="{{img_url feature_image size="m"}}" alt="{{title}}" />
            </div>
        </a>
    </div>
    {{/if}}

    <div class="card__content">
        <header>
            <h2 class="card__title"><a href="{{url}}">{{title}}</a></h2>
        </header>
        <div class="card__desc">
            <a href="{{url}}">{{excerpt words="33"}}
            </a>
        </div>

    </div>
</article>